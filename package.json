{
  "name": "packraw-app",
  "version": "1.0.4",
  "description": "パクロー（PackRaw）デスクトップアプリケーション",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:3000 && tsc -p tsconfig.electron.json && electron . --dev",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "electron": "electron .",
    "start": "npm run build && npm run electron",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "test:api": "tsc -p tsconfig.test.json && node dist-test/test-freee-api.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:real": "TEST_REAL_API=true vitest",
    "test:integration": "TEST_REAL_API=true vitest src/test/freeeApi.integration.test.ts"
  },
  "keywords": [],
  "author": "こばやし",
  "copyright": "Copyright © 2025 こばやし",
  "license": "ISC",
  "dependencies": {
    "@types/axios": "^0.14.4",
    "axios": "^1.10.0",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.3"
  }
}
